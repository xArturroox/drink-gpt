---
import "../styles/global.css";
import "../styles/background.css";
import TopBarWrapper from "../components/TopBarWrapper";

interface Props {
  title?: string;
}

const { title = "DrinkGPT" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <TopBarWrapper client:load />
    <!-- Background elements -->
    <div class="light-effect"></div>
    <div class="bg-cocktail-pattern"></div>
    <ul class="bg-bubbles">
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>
    <div class="cocktail-glass"></div>
    <div class="cocktail-glass"></div>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  main {
    position: relative;
    z-index: 1;
  }
</style>
